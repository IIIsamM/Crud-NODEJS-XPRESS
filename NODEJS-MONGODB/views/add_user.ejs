<%- include('layout/header')  %>

<div class="container">
    <div class="row">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 mx-auto mt-4">
                    <div class="card shadow">
                        <div class="card-header bg-primary">
                            <h5 class="text-light">Ingresar Datos</h5>
                        </div>
                        <div class="card-body p-4">
                            <form action="/api/user" method="post" id="add-form" >
                                <div class="mb-3">
                                    <label for="name">Nombre</label>
                                    <input type="text" name="name" class="form-control form-control-lg" placeholder="Ingresa un nombre" required/>
                                </div>
                                <div class="mb-3">
                                    <label for="edad">Edad</label>
                                    <input type="text" name="age" class="form-control form-control-lg" placeholder="Ingresa una edad" required/>
                                </div>

                                <div class="mb-3">
                                    <label for="email">Correo Electronico</label>
                                    <input type="email" name="email" class="form-control form-control-lg" placeholder="Ingresa un correo electronico" required/>
                                </div>
                                <div class="mb-3">
                                    <label for="phone">Telefono</label>
                                    <input type="tel" name="phone" class="form-control form-control-lg" placeholder="Ingresa un telefono" required/>
                                </div>
                                <div class="mb-3">
                                    <button type="submit" name="submit" value="Entrar" class="btn btn-primary btn-lg" >Agregar Datos</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer')  %>